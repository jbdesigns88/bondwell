// backend/tsconfig.json (relevant bits)
{
  "compilerOptions": {

    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },

  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["dist", "node_modules"]


}
